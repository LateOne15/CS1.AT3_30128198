<Window x:Class="LicencePlateManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LicencePlateManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500" MinWidth="480" MinHeight="485"
        Closing="Window_Closing"
        Style="{StaticResource WinAll}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="130"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <GridSplitter Height="30"/>
                <TextBlock Text="Active Systems PTY" FontSize="36" FontFamily="Britannic Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Licence Plate Management" FontSize="24" HorizontalAlignment="Center"/>
            </StackPanel>
            <Image x:Name="Active_Systems_Logo" Grid.Column="1" Source="/img/logo.png" Stretch="Fill" Margin="10"/>
        </Grid>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <DockPanel Grid.Column="0" LastChildFill="True">
                <TextBlock DockPanel.Dock="Top" Text="Untagged Plates" ToolTipService.ToolTip="Rego plates that have not been tagged"/>
                <Button DockPanel.Dock="Bottom" x:Name="btnAllReset" Width="100" Content="Reset All" Click="btnReset_Click" ToolTipService.ToolTip="Removes all plates from both lists"/>
                <GridSplitter DockPanel.Dock="Bottom" Height="10"/>
                <ListView DockPanel.Dock="Top" x:Name="lbxAllPlates" SelectionChanged="lbx_SelectionChanged" GotFocus="lbxFocus"/>
            </DockPanel>
            
            <StackPanel Margin="15"  Grid.Column="1" Orientation="Vertical">
                <TextBlock Text="Selected:"/>
                <WrapPanel Orientation="Horizontal">
                    <TextBox x:Name="tbSelect" Width="85" IsReadOnly="True" ToolTipService.ToolTip="Currently selected plate"/>
                    <TextBlock x:Name="tbTag" Text="Untagged" Width="85"  TextAlignment="Center" ToolTipService.ToolTip="Plate has not been tagged"/>
                </WrapPanel>
                <GridSplitter DockPanel.Dock="Bottom" Height="10"/>
                <WrapPanel Orientation="Horizontal">
                    <Button x:Name="btnOpen" Content="Open" Width="85" Click="btnOpen_Click" ToolTipService.ToolTip="Opens a text file with plates using a dialog box"/>
                    <Button x:Name="btnSave" Content="Save" Width="85" Click="btnSave_Click" ToolTipService.ToolTip="Saves the plates to a text file with a dialog box"/>
                </WrapPanel>
                <GridSplitter DockPanel.Dock="Bottom" Height="10"/>
                <WrapPanel Orientation="Horizontal">
                    <Button x:Name="btnEnter" Content="Enter:" Width="85" Click="btnEnter_Click" ToolTipService.ToolTip="Enter a new plate into the untagged list"/>
                    <TextBox x:Name="tbEnter"  Width="85"/>
                </WrapPanel>
                <GridSplitter DockPanel.Dock="Bottom" Height="10"/>
                <WrapPanel Orientation="Horizontal">
                    <Button x:Name="btnTag" Content="Tag/Untag" Width="85" Click="btnTag_Click" ToolTipService.ToolTip="Places an untagged list into the tagged list, and vice versa"/>
                    <Button x:Name="btnDelete" Content="Delete" Width="85" Click="btnDelete_Click" ToolTipService.ToolTip="Deletes the selected tag from its list"/>
                </WrapPanel>
                <GridSplitter DockPanel.Dock="Bottom" Height="10"/>
                <WrapPanel Orientation="Horizontal">
                    <Button x:Name="btnEdit" Content="Edit:" Width="85" Click="btnEdit_Click" ToolTipService.ToolTip="Replaces the selected tag with new text"/>
                    <TextBox x:Name="tbEdit" Width="85"/>
                </WrapPanel>
                <GridSplitter DockPanel.Dock="Bottom" Height="10"/>
                <WrapPanel Orientation="Horizontal">
                    <Button x:Name="btnSearch" Content="Search:" Width="85" Click="btnSearch_Click" ToolTipService.ToolTip="Searches for this plate in both lists"/>
                    <TextBox x:Name="tbSearch" Width="85"/>
                </WrapPanel>
                <WrapPanel Orientation="Horizontal">
                    <ToggleButton x:Name="tbtnBinary" Content="Binary" Width="85" Checked="tbtn_Checked" Unchecked="tbtn_Unchecked" ToolTipService.ToolTip="Swaps binary search on/off"/>
                    <ToggleButton x:Name="tbtnSequential" Content="Sequential" Width="85" Checked="tbtn_Checked" Unchecked="tbtn_Unchecked" ToolTipService.ToolTip="Swaps linear search on/off"/>
                </WrapPanel>
            </StackPanel>
            
            <DockPanel Grid.Column="2" LastChildFill="True">
                <TextBlock DockPanel.Dock="Top" Text="Tagged Plates" HorizontalAlignment="Right" ToolTipService.ToolTip="Plates that have been tagged for further investigation"/>
                <Button DockPanel.Dock="Bottom" x:Name="btnTaggedReset" Width="100" Content="Reset Tagged" Click="btnReset_Click" ToolTipService.ToolTip="Removes the tagged plates and moves them to the untagged plates list"/>
                <GridSplitter DockPanel.Dock="Bottom" Height="10"/>
                <ListView DockPanel.Dock="Top" x:Name="lbxTagged" SelectionChanged="lbx_SelectionChanged" GotFocus="lbxFocus"/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
